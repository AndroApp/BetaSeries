<com.github.florent37.carpaccio.Carpaccio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:register="
        com.github.florent37.carpaccio.controllers.CommonViewController;
        com.github.florent37.carpaccio.controllers.ImageViewController;
        com.github.florent37.carpaccio.controllers.TextViewController;
    ">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dip">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_top_drawer"
                android:text="@string/app_name" />


            <RelativeLayout
                android:id="@+id/relative_settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_item_size"
                android:layout_alignParentBottom="true"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:id="@+id/info_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:tag="
                font(Roboto-Medium.ttf);
            "
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_normal"
                        android:text="KÃ©vin DE JESUS FERREIRA" />

                    <TextView
                        android:id="@+id/txt_adress"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:alpha="0.3"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:tag="
                font(Roboto-Light.ttf);
            "
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_size_normal"
                        android:text="kevindejesusferreira@gmail.com" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/drawer_unseen_episodes"
                style="@style/ItemContainerDrawer">

                <ImageView
                    style="@style/ItemImageDrawer"
                    android:src="@drawable/ic_turned_in" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:tag="
                font(Roboto-Medium.ttf);
            "
                    android:text="@string/unseen_episodes" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/drawer_shows"
                style="@style/ItemContainerDrawer">

                <ImageView
                    style="@style/ItemImageDrawer"
                    android:src="@drawable/ic_movie" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.mes_series" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drawer_planning"
                style="@style/ItemContainerDrawer">

                <ImageView
                    style="@style/ItemImageDrawer"
                    android:src="@drawable/ic_event_note" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.planning" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/drawer_annuaire_serie"
                style="@style/ItemContainerDrawer">

                <ImageView
                    style="@style/ItemImageDrawer"
                    android:src="@drawable/ic_my_library_books" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.annuaire_des_series" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/black05"
                android:paddingBottom="@dimen/activity_vertical_margin_small"
                android:paddingTop="@dimen/activity_vertical_margin_small" />

            <RelativeLayout
                android:id="@+id/drawer_parametres"
                style="@style/ItemContainerDrawer">

                <ImageView style="@style/ItemImageDrawer" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:layout_marginLeft="0dip"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.parametres" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/drawer_a_propos_betaserie"
                style="@style/ItemContainerDrawer">

                <ImageView style="@style/ItemImageDrawer" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:layout_marginLeft="0dip"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.a_propos_betaseries" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/drawer_deconnexion"
                style="@style/ItemContainerDrawer">

                <ImageView style="@style/ItemImageDrawer" />

                <TextView
                    style="@style/ItemLabelDrawer"
                    android:layout_marginLeft="0dip"
                    android:tag="
                font(Roboto-Medium.ttf);
                "
                    android:text="@string/drawer.deconnexion"

                    />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</com.github.florent37.carpaccio.Carpaccio>
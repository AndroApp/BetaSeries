<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:tag="unseedDetailHeaderParallax()">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".6"
        android:scaleType="centerCrop"
        android:tag="
                    url($show.getUrlBackground());
                "
        tools:background="#FFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/movie_tile_shadow"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_black_85" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_gravity="bottom"
        android:background="#222" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/image_serie"
            android:layout_width="100dip"
            android:layout_height="150dip"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:tag="
                    url($show.getUrlShow());
                "
            android:transitionName="image"
            tools:src="@drawable/arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dip"
            android:layout_marginLeft="140dip"
            android:tag="
                    font(Roboto-Regular.ttf);
                    setText($show.title);
                "
            android:textColor="@color/white"
            android:textSize="25sp"
            tools:text="Arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dip"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="140dip"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="
                font(Roboto-Regular.ttf);
                setText($show.getUnseenCount());"
                android:textColor="@color/white75"
                android:textSize="13sp"
                />

            <TextView
                android:layout_marginLeft="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unseen_episodes"
                android:tag="
                font(Roboto-Regular.ttf);
                "
                android:textColor="@color/white75"
                android:textSize="13sp"
                 />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.github.florent37.carpaccio.Carpaccio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carpaccio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    app:register="
        RecyclerViewController;
        TextViewController;
        CommonViewController;
        controllers.EventImageViewController;
        controllers.UnseenDetailParallax;
    ">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="
            registerParallax();
            addHeader(show,header_unseen_episodes);
            adapter(episode,cell_unseen_detail_episode);
            " />


</com.github.florent37.carpaccio.Carpaccio>


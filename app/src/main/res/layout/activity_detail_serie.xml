<com.github.florent37.carpaccio.Carpaccio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:register="
        com.github.florent37.carpaccio.controllers.TextViewController;
    ">

    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/materialViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:viewpager_color="@color/primary"
        app:viewpager_enableToolbarElevation="true"
        app:viewpager_headerAdditionalHeight="15dp"
        app:viewpager_headerAlpha="0.9"
        app:viewpager_headerHeight="200dp"
        app:viewpager_hideLogoWithFade="false"
        app:viewpager_hideToolbarAndTitle="false"
        app:viewpager_logo="@layout/header_logo"
        app:viewpager_logoMarginTop="90dp"
        app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_standard"
        app:viewpager_parallaxHeaderFactor="1.5" />
</com.github.florent37.carpaccio.Carpaccio>

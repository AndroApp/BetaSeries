<com.github.florent37.carpaccio.Carpaccio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dip"
    android:layout_marginLeft="@dimen/cardMarginHorizontal"
    android:layout_marginRight="@dimen/cardMarginHorizontal"
    android:layout_marginTop="@dimen/cardMarginVertical"
    android:orientation="vertical"
    app:onlyForPreview="true"
    app:register="
        com.github.florent37.carpaccio.controllers.TextViewController;
        com.github.florent37.carpaccio.controllers.ImageViewController;
    ">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="16dip"
                android:layout_marginTop="@dimen/cardMarginVertical"
                android:clipToPadding="false"
                app:cardCornerRadius="1dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/image_serie"
                    android:layout_width="match_parent"
                    android:layout_height="150dip"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:tag="
                    enablePreview();
                    previewUrl(http://images.christianpost.com/full/61221/house-of-cards.jpg);
                    url($show.urlShow);
                " />


            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numberSeasonsEpisodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:tag="font(RobotoCondensed-Regular.ttf)"
                    android:text="5 saisons, 44 épisodes"
                    android:textAllCaps="true"
                    android:textColor="#E333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/regardePar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:tag="font(Roboto-Regular.ttf)"
                    android:text="Regardé par 133 330 membres"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/RatingStar_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/cardMarginVertical"
                    android:layout_marginTop="8dip"
                    android:numStars="5"
                    android:stepSize="1" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/black15"
            android:layout_marginTop="8dip"
            />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:ellipsize="end"
            android:maxLines="7"
            android:tag="
                lorem();
                font(Roboto-LightItalic.ttf)"
            android:textColor="#E333"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="Lire la suite"
            android:textAllCaps="true"
            android:tag="
                font(Roboto-Regular.ttf)"
            android:textColor="@color/primary"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/black15"
            android:layout_marginTop="16dip"
            />
    </LinearLayout>

</com.github.florent37.carpaccio.Carpaccio>
<resources
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="RatingStar_Medium" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rating_stars_medium</item>
        <item name="android:indeterminateDrawable">@drawable/rating_stars_medium</item>
        <item name="android:minHeight">26dip</item>
        <item name="android:maxHeight">26dip</item>
        <item name="android:thumb">@null</item>
    </style>


    <style name="ItemImageDrawer">
        <item name="android:id">@id/img_label_item_drawer</item>
        <item name="android:layout_width">20dip</item>
        <item name="android:layout_height">20dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ItemLabelDrawer">
        <item name="android:id">@id/txt_label_item_drawer</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/drawer_item_margin_size</item>
        <item name="android:textColor">@color/item_inactif</item>
        <item name="android:textSize">@dimen/txt_size_large</item>
    </style>

    <style name="ItemContainerDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_size</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/ripple_black_05</item>
    </style>

    <color name="item_inactif">#757575</color>
</resources>
